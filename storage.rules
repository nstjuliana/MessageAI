rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile photos - match {userId}.jpg pattern
    match /profile-photos/{filename} {
      // Extract userId from filename (remove .jpg extension)
      // Filename format: {userId}.jpg
      
      // Allow authenticated users to read any profile photo
      allow read: if request.auth != null;
      
      // Allow users to upload/update their own profile photo
      // Check that filename starts with their userId
      allow write: if request.auth != null 
                   && filename.matches(request.auth.uid + '[.]jpg')
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

